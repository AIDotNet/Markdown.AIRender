<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SamplesMarkdown.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:markdownRender="clr-namespace:MarkdownAIRender.Controls.MarkdownRender;assembly=MarkdownAIRender"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SamplesMarkdown.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Height="600"
        Width="800" Padding="5"
        WindowStartupLocation="CenterScreen"
        Title="SamplesMarkdown">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto *">
        <ToggleSwitch Content="Theme" OnContent="Dark" OffContent="Light"
                      Command="{Binding RaiseChangeThemeHandler}" Margin="0 0 0 10" />
        <ScrollViewer Grid.Row="1">
            <markdownRender:MarkdownRender Value="{Binding Markdown}" />
        </ScrollViewer>
    </Grid>
</Window>