<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="https://github.com/AIDotNet/Markdown.AIRender"
        xmlns:i18n="https://codewf.com"
        xmlns:language="clr-namespace:Localization">

    <!--姹紫主题-->

    <!--引用边框-->
    <Style Selector="Border.MdQuoteBorder_ColorfulPurple">
        <Setter Property="BorderBrush" Value="#965485" />
        <Setter Property="Background" Value="#fbf9fd" />
        <Setter Property="BorderThickness" Value="3 0 1 0" />
        <Setter Property="Padding" Value="8 5 5 5" />
        <Setter Property="Margin" Value="8 5 0 5" />
    </Style>

    <!--引用内容-->
    <Style Selector="SelectableTextBlock.MdQuoteP_ColorfulPurple">
        <Setter Property="Foreground" Value="#616161" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!--  普通段落  -->
    <Style Selector="SelectableTextBlock.MdP_ColorfulPurple">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Foreground" Value="#3e3e3e" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="26" />
        <Setter Property="Margin" Value="0 5" />
    </Style>

    <!--  标题一  -->
    <Style Selector="SelectableTextBlock.MdH1_ColorfulPurple">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0 5" />
    </Style>

    <!--  标题二  -->
    <Style Selector="Border.MdH2_ColorfulPurple">

    </Style>
