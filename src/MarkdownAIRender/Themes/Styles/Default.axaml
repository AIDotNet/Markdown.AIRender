<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="https://github.com/AIDotNet/Markdown.AIRender"
        xmlns:i18n="https://codewf.com"
        xmlns:language="clr-namespace:Localization">
    <!--默认主题-->

    <!--引用边框-->
    <Style Selector="Border.MdQuoteBorder">
        <Setter Property="BorderBrush" Value="#66000000" />
        <Setter Property="Background" Value="#13000000" />
        <Setter Property="BorderThickness" Value="3 0 0 0" />
        <Setter Property="Padding" Value="8 5 5 5" />
        <Setter Property="Margin" Value="8 5 0 5" />
    </Style>

    <!--引用内容-->
    <Style Selector="SelectableTextBlock.MdQuoteP">
        <Setter Property="Foreground" Value="#6a737d" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!--普通段落-->
    <Style Selector="SelectableTextBlock.MdP">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="0 8" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="LineHeight" Value="26" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style Selector="SelectableTextBlock.MdH1">
    </Style>

    <Style Selector="SelectableTextBlock.MdH2">
    </Style>

    <Style Selector="SelectableTextBlock.MdH3">
    </Style>

    <Style Selector="SelectableTextBlock.MdH4">
    </Style>

    <Style Selector="SelectableTextBlock.MdH5">
    </Style>

    <Style Selector="SelectableTextBlock.MdH6">
    </Style>

    <Style Selector="SelectableTextBlock.MdHn">
    </Style>

    <Style Selector="SelectableTextBlock.MdLink">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Foreground" Value="#0078d4" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextDecorations" Value="Underline" />
    </Style>

    <Style Selector="TextBox.markdown">
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="IsEnabled" Value="True" />
        <Setter Property="AcceptsReturn" Value="True" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="TextWrapping" Value="WrapWithOverflow"></Setter>
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style Selector="TextBox.markdown:focus /template/ Border#PART_BorderElement">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style Selector="TextBox.markdown:pointerover /template/ Border#PART_BorderElement">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style Selector="Button.Copy">
        <Setter Property="Content" Value="{i18n:I18n {x:Static language:MarkdownRender.CopyButtonContent}}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Height" Value="24" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="Margin" Value="0" />
    </Style>
</Styles>