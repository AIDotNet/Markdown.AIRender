<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="https://github.com/AIDotNet/Markdown.AIRender"
        xmlns:i18n="https://codewf.com"
        xmlns:language="clr-namespace:Localization">

    <!--科技蓝主题-->

    <!--引用边框-->
    <Style Selector="Border.MdQuoteBorder_TechnologyBlue">
        <Setter Property="Background" Value="#fff" />
        <Setter Property="Margin" Value="0 5" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="CornerRadius" Value="0 0 3 3" />
        <Setter Property="BoxShadow" Value="0 5 10 0 #84A1A8" />
    </Style>


    <!--  普通段落  -->
    <Style Selector="SelectableTextBlock.MdP_TechnologyBlue">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Foreground" Value="#3e3e3e" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="26" />
        <Setter Property="Margin" Value="0 5" />
    </Style>

